{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",  // <-- IMPORTANTE: Cambia esto si dice "esnext" o "nodenext"
    "moduleResolution": "node", // <-- IMPORTANTE
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "typechain-types/*"]
    },
    "types": ["node", "mocha", "chai"]
  },
  "include": ["./scripts", "./test", "./typechain-types", "./hardhat.config.ts"],
  "exclude": ["node_modules"]
}